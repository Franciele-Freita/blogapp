{{#if success_message}}
  <div class="alert alert-success">
    {{success_message}}
  </div>
{{/if}}

{{#if error_message}}
  <div class="alert alert-danger">
    {{error_message}}
  </div>
{{/if}}

{{#if error}}
  <div class="alert alert-danger">
    {{error}}
  </div>
{{/if}}

{{#if errors}}
  <ul class="alert alert-danger ">
    <span class="fw-bold">Erro:</span>
  {{#each errors}}
    <li class="ms-4">{{message}}</li>
  {{else}}

  {{/each}}
  </ul>
{{/if}}
